@{
    var dict = ((CaptionsBase)ViewData[Constants.CaptionsKey]);
    if (dict == null)
        dict = new CaptionsBase();
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@dict.RequestCaption</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bg.css" asp-append-version="true">
</head>
<body class="bg">
    <div class="login-container">
        <h1>@dict.RequestCaption</h1>
        <form id="loginForm" method="post" action="/Login/LoginProblem">
            <div class="form-group">
                <label for="name">@dict.EmployeeNameCaption @dict.EmployeeSurnameCaption</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">@dict.EmployeeEmailCaption</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="username">@dict.LoginCaption</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="content">@dict.ProblemRequestCaption</label>
                <textarea class="form-control" id="content" name="content" rows="10" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">@dict.SendCaption</button>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.ErrorMessage</div>
            }
        </form>
    </div>

    <div id="overlay"></div>
    <div id="spinner">
        <svg class="spinner" viewBox="0 0 50 50">
            <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle>
        </svg>
    </div>

    <footer class="border-top footer text-muted">
        <div class="copyright">
            &copy; 2024 - Команда Умники - <a asp-area="" asp-controller="Home" asp-action="Privacy">@dict.PrivacyCaption</a>
        </div>
    </footer>

    <script src="~/js/footer.js" asp-append-version="true"></script>
    <script>
        document.getElementById('loginForm').addEventListener('submit', function () {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('spinner').style.display = 'block';
        });
    </script>
</body>
</html>
